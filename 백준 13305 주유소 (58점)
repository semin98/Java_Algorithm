import java.io.*;
import java.util.*;
import java.util.stream.Stream;

public class Main {

    public static void main(String[] args) throws IOException {

        BufferedReader br = new BufferedReader(new InputStreamReader(System.in));
        StringTokenizer st;

        int N = Integer.parseInt(br.readLine());

        ArrayList<Integer> city = new ArrayList<>();
        ArrayList<Integer> oil_price = new ArrayList<>();

        st = new StringTokenizer(br.readLine());
        for(int i = 0; i < N - 1; i++) {
            city.add(Integer.parseInt(st.nextToken()));
        }
        st = new StringTokenizer(br.readLine());
        for(int j = 0; j < N; j++) {
            oil_price.add(Integer.parseInt(st.nextToken()));
        }

        int point = 0;
        int least_price = 0;
        int total_price = 0;
        while (point < N - 1) {
            if(point == 0) {
                total_price += city.get(point) * oil_price.get(point);
                least_price = oil_price.get(point);
                point++;
            } else {
                if(least_price > oil_price.get(point)) {
                    least_price = oil_price.get(point);
                }
                total_price += city.get(point) * least_price;
                point++;
            }


        }

        System.out.println(total_price);
    }
}
